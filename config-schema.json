{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/oposs/unspammer/config-schema.json",
    "title": "Unspammer Config",
    "description": "Config file for the unspammer tool",
    "type": "object",
    "properties": {
        "accounts": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["username", "password","imapServer","smtpServer", "inbox","deleteOriginal"],
                "additionalProperties": false,
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "The username of the account"
                    },
                    "password": {
                        "type": "string",
                        "description": "The password of the account"
                    },
                    "imapServer": {
                        "type": "string",
                        "description": "The imap server and port",
                        "pattern": "^\\S+:\\d+$"
                    },
                    "smtpServer": {
                        "type": "string",
                        "description": "The smtp server and port",
                        "pattern": "^\\S+:\\d+$"
                    },
                    "forwardTo": {
                        "type": "string",
                        "description": "Send the un-spammed message to ...",
                        "pattern": "^\\S+@\\S+$"
                    },
                    "outbox": {
                        "type": "string",
                        "description": "Store un-spammed message in this folder",
                        "pattern": "^.{1,}$"
                    },
                    "inbox": {
                        "type": "string",
                        "description": "Watch this folder for new messages",
                        "pattern": "^.{1,}$"
                    },
                    "deleteOriginal": {
                        "type": "boolean",
                        "description": "Delete the original message after cleaning and handling it"
                    }
                }
            }
        }
    },
    "required": [
        "accounts"
    ],
    "additionalProperties": false
}