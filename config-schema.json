{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/oposs/unspammer/config-schema.json",
    "title": "Unspammer Config",
    "description": "Config file for the unspammer tool",
    "type": "object",
    "required": [
        "imapAccounts",
        "smtpAccounts",
        "tasks"
    ],
    "additionalProperties": false,
    "properties": {
        "imapAccounts": {
            "type": "object",
            "patternProperties": {
                "^[a-z][-_a-z0-9]*$": {
                    "type": "object",
                    "properties": {
                        "username": {
                            "type": "string",
                            "description": "The username of the account"
                        },
                        "password": {
                            "type": "string",
                            "description": "The password of the account"
                        },
                        "server": {
                            "type": "string",
                            "description": "The server of the account",
                            "pattern": "^\\S+:\\d+$"
                        }
                    },
                    "required": ["username", "password", "server"],
                    "additionalProperties": false
                }
            }
        },
        "smtpAccounts": {
            "type": "object",
            "patternProperties": {
                "^[a-z][-_a-z0-9]*$": {
                    "type": "object",
                    "properties": {
                        "server": {
                            "type": "string",
                            "description": "The server of the account",
                            "pattern": "^\\S+:\\d+$"
                        }
                    },
                    "required": ["server"],
                    "additionalProperties": false
                }
            }
        },
        "tasks": {
            "type": "object",
            "patternProperties": {
                "^[a-z][-_a-z0-9]*$": {
            
                    "type": "object",
                    "required": [
                        "imapAccount",
                        "smtpAccount",
                        "watchFolder",
                        "selectMessage",
                        "editCopy",
                        "deleteMessage"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        
                        "imapAccount": {
                            "type": "string",
                            "description": "reference to entry from imapServer list"
                        },
                        "smtpAccount": {
                            "type": "string",
                            "description": "reference to entry from smtpServer list"
                        },
                        "watchFolder": {
                            "type": "string",
                            "description": "Send the un-spammed message to ..."
                        },
                        "selectMessage": {
                            "type": "string",
                            "description": "which messages to act upon",
                            "enum": [
                                "all",
                                "spam",
                                "ham"
                            ]
                        },
                        "editCopy": {
                            "type": "string",
                            "description": "What edit action to perform on matchin mails",
                            "enum": [
                                "un-spam",
                                "rt-tag",
                                "no"
                            ]
                        },
                        "storeCopyIn": {
                            "type": "string",
                            "description": "Folder for storing the edited message"
                        },
                        "forwardCopyTo": {
                            "type": "string",
                            "description": "Forward the edited message to ..."
                        },
                        "deleteMessage": {
                            "type": "boolean",
                            "description": "Delete the matching messages"
                        }
                    }
                }
            }
        }
    }
}